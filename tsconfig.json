{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "./__mocks__/**/*",
    "./__tests__/**/*",
    "dist",
    "node_modules",
    "jest.config.ts"
  ]
}
